generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model chat {
  id    Int  @default(autoincrement()) @id
  owner Int
  user  user @relation(fields: [owner], references: [id])
}

model user {
  id   Int    @default(autoincrement()) @id
  name String
  nest String
  chat chat[]
}
